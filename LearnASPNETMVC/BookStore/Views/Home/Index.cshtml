@{
	Layout = null;
}
<div>
	<h3>Распродажа книг</h3>
	<table>
		<tr class="header">
			<td><p>Название книги</p></td>
			<td><p>Автор</p></td>
			<td><p>Цена</p></td>
			<td></td>
		</tr>
		@foreach (BookStore.Models.Book b in ViewBag.Books)
		{
		<tr>
			<td><p>@b.Name</p></td>
			<td><p>@b.Author</p></td>
			<td><p>@b.Price</p></td>
			<td><p><a href="/Home/Buy/@b.Id">Купить</a></p></td>
		</tr>
		}
	</table>
	@Html.Partial("Partial")
</div>